{
  "entity": {
    "sensor": {
      "glucose_value": {
        "default": "mdi:diabetes"
      },
      "glucose_trend": {
        "default": "mdi:trending-up",
        "state": {
          "rising_quickly": "mdi:arrow-up-thick",
          "rising": "mdi:arrow-up",
          "rising_slightly": "mdi:arrow-top-right",
          "steady": "mdi:arrow-right",
          "falling_slightly": "mdi:arrow-bottom-right",
          "falling": "mdi:arrow-down",
          "falling_quickly": "mdi:arrow-down-thick"
        }
      },
      "glucose_status": {
        "default": "mdi:check-circle",
        "state": {
          "normal": "mdi:check-circle",
          "low": "mdi:arrow-down-circle",
          "high": "mdi:arrow-up-circle",
          "critical_low": "mdi:alert-circle",
          "no_data": "mdi:help-circle"
        }
      },
      "reading_age": {
        "default": "mdi:clock-outline"
      },
      "time_in_range_today": {
        "default": "mdi:target"
      },
      "time_below_range_today": {
        "default": "mdi:arrow-down-bold-circle"
      },
      "time_above_range_today": {
        "default": "mdi:arrow-up-bold-circle"
      },
      "data_completeness_today": {
        "default": "mdi:database-check"
      },
      "daily_insulin_total": {
        "default": "mdi:needle"
      },
      "daily_bes_total": {
        "default": "mdi:food-apple"
      }
    },
    "number": {
      "low_threshold": {
        "default": "mdi:arrow-down-bold"
      },
      "high_threshold": {
        "default": "mdi:arrow-up-bold"
      },
      "critical_low_threshold": {
        "default": "mdi:alert"
      },
      "data_timeout": {
        "default": "mdi:timer-alert-outline"
      }
    }
  }
}
